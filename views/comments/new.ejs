<%- include("../partials/header") %>
<link rel="stylesheet" href="/stylesheets/newComment.css">

<div class="container border rounded">

    <form action="/blogs/<%=blog._id%>/comments" method="POST">
        <h3>Add a comment to: <span><%=blog.title%></span></h3>

        <div class="form-group">
            <textarea required name="comment[text]" class="form-control" placeholder="Keep things civil"></textarea>
        </div>


        <button type="submit" class="btn btn-dark border border-white">Comment</button>

    </form>

</div>

